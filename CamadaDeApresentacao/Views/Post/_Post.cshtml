@model CamadaDeApresentacao.Models.Post

<article>
    <header>
        <h1>@Model.Titulo</h1>
        <div><small>@Model.Autor - @Model.Data.ToString("d", System.Globalization.CultureInfo.CurrentUICulture)</small></div>
    </header>
    <p>@Model.Texto</p>
    <footer>
        Categoria: @Model.Categoria
    </footer>
</article>

