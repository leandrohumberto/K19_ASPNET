@model WebApi.Models.Curso
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @action = "/api/cursos" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Curso</legend>

        <div class="editor-label">
            @Html.LabelFor(c => c.Sigla)
        </div>
        <div class="editor-field">
            @Html.EditorFor(c => c.Sigla)
            @Html.ValidationMessageFor(c => c.Sigla)
        </div>

        <div class="editor-label">
            @Html.LabelFor(c => c.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(c => c.Nome)
            @Html.ValidationMessageFor(c => c.Nome)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Home", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}